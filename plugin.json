  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/your-username/dotnet-plugin.nvim",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dotnet-plugin.nvim.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/dotnet-plugin.nvim/issues"
  },
  "keywords": [
    "neovim",
    "nvim",
    "dotnet",
    "csharp",
    "fsharp",
    "vb.net",
    "ide",
    "development",
    "msbuild",
    "solution",
    "project"
  ],
  "engines": {
    "nvim": ">=0.8.0"
  },
  "dependencies": {
    "dotnet": ">=6.0.0"
  },
  "optionalDependencies": {
    "msbuild": ">=16.0.0"
  },
  "features": {
    "core": {
      "configuration": "User-customizable settings with validation",
      "events": "Publish-subscribe event system",
      "process": "Asynchronous process management",
      "logging": "Multi-level logging with file and buffer output"
    },
    "solution": {
      "parser": "Parse .sln files and extract project information",
      "dependencies": "Track project and package dependencies"
    },
    "project": {
      "parser": "Parse .csproj, .fsproj, and .vbproj files",
      "analysis": "Extract frameworks, references, and metadata"
    },
    "utilities": {
      "filesystem": "Comprehensive file system operations",
      "paths": "Cross-platform path utilities"
    }
  },
  "roadmap": {
    "phase1": {
      "month1": "Core Infrastructure (COMPLETED)",
      "month2": "Project System & LSP",
      "month3": "UI Foundation & Build System"
    },
    "phase2": {
      "month4": "Solution Explorer & Build System",
      "month5": "Debugging Foundation",
      "month6": "Testing Framework"
    },
    "phase3": {
      "month7": "Refactoring & Code Generation",
      "month8": "Advanced Debugging & Analysis",
      "month9": "Performance Optimization"
    },
    "phase4": {
      "month10": "Package Management & Deployment",
      "month11": "Container & Cloud Support",
      "month12": "Polish & Documentation"
    }
  },
  "performance_targets": {
    "startup_time": "< 1 second",
    "memory_usage": "70% less than Visual Studio",
    "solution_loading": "50% faster than Visual Studio",
    "build_performance": "30% faster than Visual Studio"
  },
  "supported_file_types": [
    ".sln",
    ".csproj",
    ".fsproj",
    ".vbproj",
    ".cs",
    ".fs",
    ".vb"
  ],
  "supported_frameworks": [
    ".NET 6.0+",
    ".NET Core 3.1+",
    ".NET Framework 4.6.1+",
    ".NET Standard 2.0+"
  ],
  "architecture": {
    "type": "modular",
    "separation": "process-separated",
    "communication": "JSON-RPC, LSP, DAP",
    "principles": [
      "Asynchronous by default",
      "Incremental processing",
      "Data-driven UI",
      "Performance focus"
    ]
  },
  "testing": {
    "framework": "plenary.nvim",
    "coverage": "core modules",
    "types": [
      "unit tests",
      "integration tests",
      "performance tests"
    ]
  }
